# .env

# ====================
# OpenAI Configuration
# ====================
# OpenAI API key for LLM requests
OPENAI_API_KEY=sk-proj-

# ====================
# Claude Configuration
# ====================
# Anthropic API key for LLM requests
ANTHROPIC_API_KEY=

# ====================
# Supabase Configuration
# ====================
# Supabase project URL
LOGIN_SUPABASE_URL=
# Supabase service role key
LOGIN_SUPABASE_KEY=

# ====================
# Encryption Configuration
# ====================
# Comma-separated list of Fernet encryption keys. Put the most recent key at the front.
FERNET_KEYS=

# ====================
# Local Storage Configuration
# ====================
# Local file storage path (defaults to reflexio/data directory)
LOCAL_STORAGE_PATH=
# SQLite database file directory (defaults to reflexio/data directory)
SQLITE_FILE_DIRECTORY=

# ====================
# Testing & Logging
# ====================
# Set to 1 to enable test environment mode
IS_TEST_ENV=true
# Set to enable debug logging to console
DEBUG_LOG_TO_CONSOLE=true
# mock LLM call response
MOCK_LLM_RESPONSE=false

# end to end test supabse credentials
TEST_SUPABASE_URL=http://127.0.0.1:54321
TEST_SUPABASE_KEY=
TEST_SUPABASE_DB_URL=

# ====================
# Self-hosting
# ====================
SELF_HOST=false
# Next.js requires NEXT_PUBLIC_ prefix for client-side env vars
NEXT_PUBLIC_SELF_HOST=false

# S3 Config Storage (separate from data storage)
# AWS S3 access key for config storage
CONFIG_S3_ACCESS_KEY=
# AWS S3 secret key for config storage
CONFIG_S3_SECRET_KEY=
# AWS S3 region for config storage
CONFIG_S3_REGION=
# S3 bucket path for config storage
CONFIG_S3_PATH=

# ====================
# Deployment
# ====================
RUN_MIGRATION=false
